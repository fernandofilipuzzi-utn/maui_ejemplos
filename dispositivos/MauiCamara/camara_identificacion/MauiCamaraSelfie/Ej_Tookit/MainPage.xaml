<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Ej_Tookit.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20">

            <toolkit:CameraView x:Name="MyCamera" MediaCaptured="MyCamera_MediaCaptured" />

            <Image x:Name="MyImage" Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" />

            <Button Text="SMILE" Clicked="Button_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
