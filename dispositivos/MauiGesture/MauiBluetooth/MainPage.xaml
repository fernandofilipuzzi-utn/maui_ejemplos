<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBluetooth.MainPage">

    <StackLayout Orientation="Vertical" >
        <Button Text="Escanear Dispositivos Bluetooth" Clicked="OnScanButtonClicked" />
        <Label x:Name="lbEstado" Text="" />

        <ListView x:Name="deviceListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Id}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>